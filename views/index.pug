extends layout

block content
    header.main-header
        .overlay
        video(playsinline='playsinline' autoplay='autoplay' muted='muted' loop='loop')
            source(src='media/process-loop.mp4' type='video/mp4' class="full-overlay")
        .container.h-100
            .d-flex.h-75.text-center.align-items-center
                .w-100.text-white
                    h1.display-3
                        | Welcome to
                        span.highlight Versyx
                    p.lead.mb-0
                        | We&apos;re a Digital Agency
                        | based in
                        span.highlight Rushden
    // Services
    section#services.page-section.h-100
        .container
            .row
                .col-lg-12.text-center
                    h2.section-heading.text-uppercase Services
                    h3.section-subheading.text-muted
                        | If there&apos;s something else you have in mind, please feel free to ask us directly :).
            .row.text-center
                .col-md-4
                    .column-margin
                        span.fa-stack.fa-4x
                            i.fa.fa-circle.fa-stack-2x.branded
                            i.fa.fa-shopping-cart.fa-stack-1x.fa-inverse
                        h4.service-heading E-Commerce
                        p.text-muted
                            | If you&apos;re looking to set up shop, we would absolutely love to help.
                            | We&apos;ll get your awesome online business launched in no time.
                .col-md-4
                    .column-margin
                        span.fa-stack.fa-4x
                            i.fas.fa-circle.fa-stack-2x.branded
                            i.fas.fa-laptop.fa-stack-1x.fa-inverse
                        h4.service-heading Responsive Design
                        p.text-muted
                            | Whether it&apos;s websites or apps, it&apos;s important to stay ahead.
                            | We&apos;ll make sure to provide a perfect experience for your customers on any device.
                .col-md-4
                    .column-margin
                        span.fa-stack.fa-4x
                            i.fas.fa-circle.fa-stack-2x.branded
                            i.fas.fa-server.fa-stack-1x.fa-inverse
                        h4.service-heading Hosting
                        p.text-muted
                            | Focus on your business, we&apos;ll handle the rest. We provide managed scalable hosting with 24-hour support included at no extra cost.
    // Team
    section#team.bg-light.page-section.h-100
        .container
            .row
                .col-lg-12.text-center
                    h2.section-heading.text-uppercase The Team
                    // <h3 class="section-subheading"></h3>
            .row.text-center
                .col-sm-6
                    .team-member.column-margin
                        img.mx-auto.rounded-circle(src='media/team/1.jpg' alt='')
                        h4 Danielle Sharpe
                        p.text-muted Co-Founder &amp; Designer
                        ul.list-inline.social-buttons
                            li.list-inline-item
                                a(href='#')
                                    i.fab.fa-twitter
                            li.list-inline-item
                                a(href='#')
                                    i.fab.fa-facebook-f
                            li.list-inline-item
                                a(href='#')
                                    i.fab.fa-linkedin-in
                .col-sm-6
                    .team-member.column-margin
                        img.mx-auto.rounded-circle(src='media/team/2.jpg' alt='')
                        h4 Christopher Rowles
                        p.text-muted Co-Founder &amp; Developer
                        ul.list-inline.social-buttons
                            li.list-inline-item
                                a(href='#')
                                    i.fab.fa-twitter
                            li.list-inline-item
                                a(href='#')
                                    i.fab.fa-facebook-f
                            li.list-inline-item
                                a(href='#')
                                    i.fab.fa-linkedin-in
    // Contact
    .filter-control
        .filter
        section#contact.page-section.h-100.form-section
            .container
                .row
                    .col-lg-12.text-center
                        h2.section-heading.text-uppercase Contact Us
                        h3.section-subheading.text-muted We would love to hear from you :)
                .row
                    .col-lg-12
                        form#contactForm(name='sentMessage' novalidate='novalidate')
                            .row
                                .col-md-6
                                    .form-group
                                        input#name.form-control(type='text' placeholder='Your Name *' required='required' data-validation-required-message='Please enter your name.')
                                        p.help-block.text-danger
                                    .form-group
                                        input#email.form-control(type='email' placeholder='Your Email *' required='required' data-validation-required-message='Please enter your email address.')
                                        p.help-block.text-danger
                                    .form-group
                                        input#phone.form-control(type='tel' placeholder='Your Phone *' required='required' data-validation-required-message='Please enter your phone number.')
                                        p.help-block.text-danger
                                .col-md-6
                                    .form-group
                                        textarea#message.form-control(placeholder='Your Message *' required='required' data-validation-required-message='Please enter a message.')
                                        p.help-block.text-danger
                                .clearfix
                                .col-lg-12.text-center
                                    #success
                                    button#sendMessageButton.btn.btn-primary.btn-xl.text-uppercase(type='submit') Send Message