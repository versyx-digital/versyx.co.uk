mixin section-header(heading, subheading)
    h2.section-heading.text-uppercase= heading
    if subheading
        h3.section-subheading.text-muted= subheading

mixin icon(icon)
    span.fa-stack.fa-4x
        i.fa.fa-circle.fa-stack-2x.branded
        i(class=`fa fa-${icon} fa-stack-1x fa-inverse`)

mixin socialmedia
    ul.list-inline.social-buttons
        li.list-inline-item
            a(href='https://twitter.com/versyxdigital')
                i.fab.fa-twitter
        li.list-inline-item
            a(href='https://facebook.com/versyxdigital')
                i.fab.fa-facebook-f